<!doctype html>
<html>
  <head>
    <meta charset="utf-8">

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "The Middleman" %></title>

    <%= javascript_include_tag "application" %>
    <%= stylesheet_link_tag "normalize", "all" %>
    <%= partial 'vendor/typekit' %>
    <%= partial 'vendor/google_analytics' %>
  </head>

  <body class="<%= page_classes %>">
    <div class="wrapper">
      <div class="container main">
        <h1><a href="/">Lorem Whitman</a></h1>
        <div class="mustache-aligner"></div>
        <div class="content">
          <%= yield %>
          <div class="push"></div>
        </div>
        <footer class="container">
          <ul>
            <li><a href="http://github.com/mrlarner/lorem-whitman">The Gem</a></li>
            <li><a href="/docs">The API</a></li>
            <li><a href="/about">About</a></li>
          </ul>
        </footer>
      </div>
    </div>
  </body>
</html>